<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beverego</title>
    <link rel="shortcut icon" type="image/jpg" href="img/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/app.css">
</head>

<body>
    

    <div class="main">
       
        <nav class="container mx-auto flex items-center justify-between py-4">
            <div class="flex flex-col leading-3 ">
                <div>
                    <img src="img/logo.png " class="h-20 w-20" alt="logo" srcset="">
                </div>
                <p class="text-white">Beverego</p>
            </div>
            <div>
                <div class="flex item-center button-div md:hidden bg-white">
                    <button class="pointer nav-togggler mobile-menu-button" id="">
    
                        <svg viewBox="0 0 100 80" width="40" height="40" >
                            <rect width="100" height="20"></rect>
                            <rect y="30" width="100" height="20"></rect>
                            <rect y="60" width="100" height="20"></rect>
                        </svg>
                    </button>
    
                </div>
                <div class="showing">

                
                <ul class="flex item-center ">
                    
                    <li class="ml-12 "><a href="">Menu</a></li>
                    <li class="ml-12"><a href="/allOrders">All Orders</a></li>
                    <% if(user){%>
                        <li class="ml-12 text-white"><form id="logout" action="/logout" method="post"><a onclick="document.getElementById('logout').submit()" href="#">logout</a></form></li>
                    <%}else{%>
                            <li class="ml-12 text-white"><a href="/register">register</a></li>
                            <li class="ml-12 text-white"><a href="/login">login</a></li>
                    <% }%>
                    <li class="ml-12 text-black"><a href="cart" class="cart inline-block px-4 py-2 rounded-full flex items-center">
                        <span id="cartCounter" class="text-white font-bold pr-2"><%= sessionss.cart? sessionss.cart.totalQty : '' %></span>
                            <img src="img/cart.png" alt="cart" class="uniqueimage"></a></li>
                </ul>
            </div>
            </div>
        </nav>
        <div class="main-menu flex item-center  justify-center md:hidden">
            <ul class="flex item-center flex-col " id=" ">
    
                <li class="ml-12 text-white"><a href="/">Menu</a></li>
                <li class="ml-12 text-white"><a href="/allOrders">All orders</a></li>
                <% if(user){%>
                    <li class="ml-12 text-white">
                        <form id="logout" action="/logout" method="post"><a
                                onclick="document.getElementById('logout').submit()" href="#">logout</a></form>
                    </li>
    
                    </li>
                    <%}else{%>
                        <li class="ml-12 text-white"><a href="/register">register</a></li>
                        <li class="ml-12 text-white"><a href="/login">login</a></li>
                        <% }%>
                            <li class="ml-12 text-white"><a href="cart"
                                    class="cart inline-block px-4 py-2 rounded-full flex items-center">
                                    <span id="cartCounter" class="text-white font-bold pr-2">
                                        <%= sessionss.cart? sessionss.cart.totalQty : '' %>
                                    </span>
                                    <img src="img/cart.png" alt="cart" class="uniqueimage"></a>
                            </li>
    
            </ul>
        </div>
    

        <section class="hero py-36 ">
            <div class="container mx-auto flex justify-between items-center">
                <div class="w-1/2">
                    <h6 class="text-lg text-white"><em>Are you Hungry </em></h6>
                    <h1 class="text-3xl md:text-6xl font-bold text-white">Don't wait !!</h1>
                    <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button>
                </div>
                <img src="img/hero-drink.png" class="hero-img h-72 lg:h-96" alt="" srcset="">

            </div>
        </section>
    </div>
    <section class="menu container mx-auto py-8 ">
        <h1 class="text-xl font-bold mb-8 ">All Drinks</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-24 gap-y-20">    
        <%drink.forEach(function(drinks){ %>
                <div class="w-full md:w-64 shadow-lg pb-2">
                    <img class="h-40 mb-4 mx-auto" src="/img/<%= drinks.image %>" alt="" srcset="">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg  "><%= drinks.name%></h2>
                        <span class="size py-1 px-4 rounded-full uppercase text-xs "><%= drinks.size%></span>
                    </div>
                    <div class="flex items-center justify-around mt-6 mb-6">
                        <span class="font-bold text-lg">RS: <%= drinks.price%></span>
                        <button data-drink="<%= JSON.stringify(drinks) %>" class="add-to-cart  py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">ADD </span>
                        </button>
                    </div>
                </div>
                <%})%>
            </div>
            
           
    </section>



    <script src="js/app.js"></script>
</body>


</html>